{
  "manifest_version": 2,
  "name": "Trello Super Powers",
  "version": "0.3_dev",

  "description": "Add Superpowers to your Trello board.",
  "homepage_url": "https://github.com/christiankaindl/trello-super-powers",
  "icons": {
  	"32": "assets/TSP_32px.png",
  	"64": "assets/TSP_64px.png",
  	"128": "assets/TSP_128px.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.trello.com/*"],
      "css": ["enhancedStyles.css"],
      "js": ["inject.js"]
    }
  ]
}
